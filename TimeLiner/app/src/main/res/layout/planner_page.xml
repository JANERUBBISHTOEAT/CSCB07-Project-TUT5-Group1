<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77B85F80">

    <ListView
        android:id="@+id/planner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="90dp"
        android:background="#FFF7FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planner_title" />

    <TextView
        android:id="@+id/planner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="My planner"
        android:textColor="#FFF7FA"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/planner"
        app:layout_constraintStart_toStartOf="@+id/planner"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_taken_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="view taken courses"
        android:textColor="@color/pink"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/back_wishlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planner" />

    <Button
        android:id="@+id/back_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="back to wishlist"
        android:textColor="@color/pink"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_taken_course"
        app:layout_constraintTop_toBottomOf="@+id/planner" />
</androidx.constraintlayout.widget.ConstraintLayout>